:PMfromID2ColorNamed
	  rvl:disabled "true"^^xsd:boolean ;
      rdf:type rvl:PropertyMapping ;
      rdfs:label "PM from ID to color"^^xsd:string ;
 	  rvl:sourceProperty rdf:ID ;
 	  rvl:targetAttribute vg:color_named ;
 	  rvl:valueMapping [
        a rvl:ValueMapping ;
        rvl:sourceValueOrderedSet (
			cito:critiques
			cito:confirms
		);
		rvl:targetValueList (
			vg:Red
			vg:Yellow
		);
      ]
      . 
        